<%- include("../partials/header") %> <%- include("../partials/navbar") %>

<div class="container mt-2 mb-2 p-3 rounded">
  <% for(let blog of blogs){ %>
  <div class="card mt-3 p-2">
    <h1 class="fw-bold card-title"><%= blog.title %></h1>
    <img
      src="<%= blog.img %> "
      style="width: 60%; height: 30rem"
      class="m-auto"
    />
    <h5 class="text-center author">
      <span class="text-muted">written by -</span> <%=blog.author%>
    </h5>
    <p class="p-3 card-text"><%= blog.body.substring(0,500) %>...</p>
    <a href="/blogs/<%= blog._id %> " class="btn btn-outline-info">More Info</a>
  </div>
  <% } %>
</div>

<%- include("../partials/footer") %>
